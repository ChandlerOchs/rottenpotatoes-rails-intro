-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th= link_to "Movie Title", movies_path(:sort => "titles"), :id => "header1", :class => params[:sort] == 'titles' ? 'hilite p-3 mb-2 bg-warning text-dark' : '' 
      %th Rating
      %th= link_to "Release Date", movies_path(:sort => "dates"), :id => "header2", :class => params[:sort] == 'dates' ? 'hilite p-3 mb-2 bg-warning text-dark' : '' 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
